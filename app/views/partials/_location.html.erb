<div id="location" data-meetle-id="<%= @meetle.id %>" class="my-5">
  <% if !@meetle.stations.empty? %>
    <div class="card-border">
      <div class="card-stations-head m-2">
        Activity type: <strong class="font-size: 24px;"><%= @meetle.activity %></strong>
      </div>
    </div>
    <div class="card-spacing"></div>
    <div class="card-border">
      <ul class="list-group list-group-flush">
        <% @meetle.locations.each do |location| %>
          <li class="list-group-item card-stations-infos"><%= location.user.name %>'s location: <%= location.station.name %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="card-spacing"></div>
  <div id="map" data-map-id="<%= @meetle.id %>"
               style= "width: 100%; height: 400px;"
               data-markers-locations="<%= @markers_locations.to_json %>";
               data-markers-users="<%= @markers_users.to_json %>";
               data-mapbox-api-key="<%= ENV['MAPBOX_API'] %>"></div>
</div>
