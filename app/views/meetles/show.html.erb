<div class="justify-content-center mt-5 mb-5">
  <div class="d-flex text-center">
    <div class="mx-auto">
      <div class="row">
        <h1 class="title col">meetle.</h1>
        <%= image_tag("question.jpg", :size => "116x175", class:"col-md-auto p-0") %>
      </div>
      <div class="title">
        <p>meet in the middle for...</p>
        <div class="btn col">
          <% Meetle::ACTIVITY.each do |act| %>
            <%= simple_form_for @meetle do |f| %>
              <%= f.input :activity, input_html: {value: act}, as: 'hidden'  %>
              <%= f.submit act %>
            <% end %>
          <% end %>
        </div>
      </div>
      <div class="row" >
        <div class="col">
          <h1>Pages#home</h1>
          <%= simple_form_for @meetle, remote: true, method: :patch do |f| %>
            <%= f.input :stations, collection: Station.all.order(:name), placeholder: @current_station   %>
            <!-- <%= f.input :activity, collection: Meetle::ACTIVITY, placeholder: @meetle.activity  %> -->
            <%= f.button :submit %>
          <% end %>
          <h2> <%  @meetle.locations.each do |location| %></h2>
            <h2>  <%= location.user.email %>'s location: <%= location.station.name %></h2>
          <% end %>
          <h2>Meeting for <%= @meetle.activity %> </h2>
          <button type="button" class="btn btn-orange" data-toggle="modal" data-target="#exampleModal">
            Share your meetle
          </button>
          <%= render "partials/sharelink" %>
        </div>
      </div>
    </div>
  </div>
  <div class="container">
    <div class="row justify-content-center">
      <% if @meetle.stations.count > 1 %>
        <div class="row mt-5">
          <% @result_stations.each do |result_station| %>
            <div class="col-12 col-lg-4 h-100">
              <%= render "partials/resultcard", result_station: result_station, user_station: @user_station %>
            </div>
          <% end %>
        </div>
      <% end %>
    </div>
  </div>
</div>
